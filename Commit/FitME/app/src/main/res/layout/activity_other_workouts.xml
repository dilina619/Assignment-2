<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".OtherWorkouts">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@null"
        android:layout_marginTop="15dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="backToHome"
            android:background="@color/transparent"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/heading"
            android:layout_below="@id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/medium"
            android:layout_gravity="start"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Other Workouts"
            android:layout_weight="7"
            android:textSize="28dp" />


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/chest"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:clickable="true"
                    android:onClick="goToChest">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/shoulders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="bottom"
                            android:textColor="@color/white"
                            android:text="Chest"
                            android:layout_margin="10dp"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/arms"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:clickable="true"
                    android:onClick="goToArms">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/shoulders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="bottom"
                            android:textColor="@color/white"
                            android:text="Arms"
                            android:layout_margin="10dp"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/back"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:clickable="true"
                    android:onClick="goToBac">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/shoulders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="bottom"
                            android:textColor="@color/white"
                            android:text="Back"
                            android:layout_margin="10dp"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/abs"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:clickable="true"
                    android:onClick="goToAbs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/shoulders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="bottom"
                            android:textColor="@color/white"
                            android:text="Abdominals"
                            android:layout_margin="10dp"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/shoulders"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:clickable="true"
                    android:onClick="goToShoulders">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/shoulders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="bottom"
                            android:textColor="@color/white"
                            android:text="Shoulders"
                            android:layout_margin="10dp"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/legs"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:clickable="true"
                    android:onClick="goToLegs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/shoulders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="bottom"
                            android:textColor="@color/white"
                            android:text="Legs"
                            android:layout_margin="10dp"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>